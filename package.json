{
  "name": "pghelp",
  "description": "A command line tool for all flavors of PostgreSQL use.",
  "version": "1.0.11",
  "license": "MIT",
  "author": "Sean Cotter <sd.cotter45@gmail.com>",
  "homepage": "https://github.com/Cotter45/pghelp",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cotter45/pghelp.git"
  },
  "keywords": [
    "postgresql",
    "cli",
    "command line",
    "database",
    "pg",
    "query",
    "query builder",
    "postgres",
    "typescript",
    "javascript",
    "node",
    "pghelp"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=14"
  },
  "bin": {
    "pghelp": "dist/pghelp.js"
  },
  "scripts": {
    "build": "tsc",
    "check": "tsc --noEmit",
    "db": "npm run build && node dist/scripts/db/pghelp.js",
    "start": "npm run build && node dist/pghelp.js",
    "qb": "npm run build && node dist/query-builder.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "update": "ncu -u && npm install"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@typescript-eslint/typescript-estree": "^8.45.0",
    "dotenv": "^17.2.3",
    "minimist": "^1.2.8",
    "pg": "^8.16.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.5",
    "jest": "^30.2.0",
    "npm-check-updates": "^19.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "zod": "^4.1.11"
  }
}
